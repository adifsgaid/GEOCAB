
<div class="container">
  <div class="card main">
    <div class="card-body">
      <div class="d-flex justify-content-between">
        <div class="card-home-text">
          <div class="mb-5 mt-5 title-desc">
            <h1>GEOCAB</h1>
            <p>Votre projet d'installation en libéral de A à Z.</p>
          </div>
          <div class="form-inputs">
            <%= simple_form_for :search, url: user_path(current_user), method: :get do |f| %>

              Je suis <%= simple_form_for current_user do |f| %>
                <%= f.input :job, label: false, :collection => ["Infirmier", "Kinésithérapeute", "Médecin généraliste", "Ostéopathe", "Sage-Femme"] %>
              <% end %>


              <%= simple_form_for @search do |f| %>
                et je m'installe à <%= f.input :query, label: false, placeholder: "Lyon" %>
              <% end %>

              <%= f.button :submit, "C'est parti !", class: "btn btn-primary" %>

            <% end %>

          </div>
        </div>
        <div class="card-home-img">
          <%= image_tag "home-img.png", height: 300%>
        </div>
      </div>
    </div>
  </div>
  <div class="card-steps">
    <div class="card-body">
      <div class="d-flex justify-content-around">
        <div class="step">
          <i class="fas fa-clipboard-check"></i>
          <p text="center">Remplissez notre questionnaire pour précisez votre projet d'installation</p>
        </div>
        <div class="step">
          <i class="fas fa-cogs"></i>
          <p text="center">Notre algorithme trouve pour vous la meilleure proposition</p>
        </div>
        <div class="step">
          <i class="fas fa-columns"></i>
          <p text="center">Accédez à votre projet sur-mesure dans votre dashboard !</p>
        </div>
      </div>
    </div>
  </div>
</div>

