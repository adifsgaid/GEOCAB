<div class="container questionnaire">
  <h2>D'abord, faisons connaissance !</h2>
  <div class="card">
    <div class="card-body">
      <div class="card-title">
        <h4><i class="far fa-file-alt"></i> Démarches administratives</h4>
        <hr>
      </div>
      <h4>Avez-vous entrepris les démarches suivantes ?</h4>
      <div class="wrapper">
        <div class="questionnaire-img">
          <%= image_tag "office-img", height: 150 %>
        </div>
        <div class="mt-5 questions">
          <%= simple_form_for current_user do |f| %>
            <div class="field d-flex justify-content-between">
              <p>Inscription à l’Ordre des Masseurs-Kinésithérapeutes ?</p>
              <%= f.input :ordre, label: "", as: :radio_buttons, collection: [["Oui", 1], ["Non", 0]], :checked => 0 %>
            </div>

            <div class="field d-flex justify-content-between">
              <p>Enregistrement auprès de la CPAM ?</p>
              <%= f.input :cpam, label: "", as: :radio_buttons, collection: [["Oui", 1], ["Non", 0]], :checked => 0 %>
            </div>

            <div class="field d-flex justify-content-between">
              <p>Déclaration à l'URSSAF ?</p>
              <%= f.input :urssaf, label: "", as: :radio_buttons, collection: [["Oui", 1], ["Non", 0]], :checked => 0 %>
            </div>

            <div class="field d-flex justify-content-between">
              <p>Inscription à la caisse de retraite CARPIMKO ?</p>
              <%= f.input :retraite, label: "", as: :radio_buttons, collection: [["Oui", 1], ["Non", 0]], :checked => 0 %>
            </div>
            <div class="field d-flex justify-content-between">
              <p>Souscription à une assurance en responsabilité civile professionnelle ?</p>
              <%= f.input :assurance_rcp, label: "", as: :radio_buttons, collection: [["Oui", 1], ["Non", 0]], :checked => 0 %>
            </div>
        </div>
      </div>
      <div class="text-center">
        <%= f.submit "Questions suivantes !", class: "btn btn-primary" %>
      </div>
    <% end %>

