<div class="main-container questionnaire">
  <h2>D'abord, faisons connaissance !</h2>
  <div class="card">
    <div class="card-body">
      <div class="card-title">
        <h4><i class="fas fa-hospital-user"></i> Critères personnels</h4>
        <hr>
      </div>
      <h4>Où souhaitez-vous installer votre cabinet ?</h4>
      <div class="wrapper-questionnaire">
        <div class="questionnaire-img">
          <%= image_tag "office-img", height: 150 %>
        </div>
        <div class="mt-5 questions-2">
          <%= form_with url: questionnaire_step_2_searches_path, local: true, method: :post do |f| %>

            <div class="field d-flex justify-content-between">
              <p>- Proche d'une école / crèche ?</p>
              <div>
                <%= label :ordre, ""%>
                <%= f.check_box :urssaf, as: :boolean, :checked => 0,  input_html: { class: 'custom-check-box' } %>
              </div>
            </div>

            <div class="field d-flex justify-content-between">
              <p>- Proche d'une salle de sport ?</p>
              <div>
                <%= label :ordre, ""%>
                <%= f.check_box :urssaf, as: :boolean, :checked => 0,  input_html: { class: 'custom-check-box' } %>
              </div>
            </div>

             <div class="field d-flex justify-content-between">
              <p>- Proche d'un parc ?</p>
              <div>
                <%= label :ordre, ""%>
                <%= f.check_box :urssaf, as: :boolean, :checked => 0,  input_html: { class: 'custom-check-box' } %>
              </div>
            </div>

            <div class="field d-flex justify-content-between">
              <p>- Proche des transports en commun ?</p>
              <div>
                <%= label :ordre, ""%>
                <%= f.check_box :urssaf, as: :boolean, :checked => 0,  input_html: { class: 'custom-check-box' } %>
              </div>
            </div>

            <div class="field d-flex justify-content-between">
              <p>- Quel est votre budget ?</p>
              <%= form_with url: questionnaire_step_2_searches_path, local: true, method: :post do |f| %>
                <div class="field d-flex justify-content-between">
                  <%= f.text_field :budget %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <div class="text-center">
            <%= f.submit "Voir mon dashboard", class: "mt-5 btn btn-primary" %>
          <% end %>
        </div>
      <div class="progress">
        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100" style="width: 10%"></div>
      </div>
    </div>
  </div>
</div>
